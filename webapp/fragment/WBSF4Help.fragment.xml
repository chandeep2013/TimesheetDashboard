<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <TableSelectDialog
        noDataText="{i18n>noWBS}"
        title="{i18n>selectWBS}"
        liveChange="onSearchWBSValue"
        confirm="handleWBSClose"
        cancel="handleWBSClose"
        items="{valueHelp>/wbs}"
    >
        <ColumnListItem vAlign="Middle">
            <cells>
                <Text text="{valueHelp>ID}" />
                <Text text="{valueHelp>NAME}" />
                <Text text="{valueHelp>ID_1}" />
                <Text text="{valueHelp>NAME_1}" />
                <Text text="{valueHelp>ID_2}" />
                <Text text="{valueHelp>NAME_2}" />
                <Text text="{valueHelp>COMPANYID}" />
                <Text text="{valueHelp>PROJECTMANAGEREMAIL}" />
                <Text text="{valueHelp>PROJECTMANAGER}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>jobId}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>jobName}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>sectionID}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>sectionName}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>phaseID}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>phaseName}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>company}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>projectMngrID}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>projectMngrName}" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
